texto
<ul class="lista-filmes">
    <!-- Item 1 -->
    <li class="filme" onclick="mostrarDescricao('descricao1')">
        Título do Filme 1
        <div id="descricao1" class="descricao-filme">
            <p>Descrição detalhada do Filme 1. Lorem ipsum dolor sit amet.</p>
            <button onclick="fecharDescricao('descricao1', event)">Fechar</button>
        </div>
    </li>

    <!-- Item 2 -->
    <li class="filme" onclick="mostrarDescricao('descricao2')">
        Título do Filme 2
        <div id="descricao2" class="descricao-filme">
            <p>Descrição detalhada do Filme 2. Consectetur adipiscing elit.</p>
            <button onclick="fecharDescricao('descricao2', event)">Fechar</button>
        </div>
    </li>
</ul>


css
.lista-filmes {
    list-style: none;
    padding: 0;
    width: 300px;
}

.filme {
    padding: 10px;
    margin: 5px 0;
    background-color: #f0f0f0;
    cursor: pointer;
    border-radius: 4px;
    transition: background-color 0.3s;
}

.filme:hover {
    background-color: #e0e0e0;
}

.descricao-filme {
    display: none; /* Oculta a descrição inicialmente */
    padding: 10px;
    margin-top: 5px;
    background-color: #fff;
    border: 1px solid #ddd;
    border-radius: 4px;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
}

.descricao-filme button {
    margin-top: 10px;
    padding: 5px 10px;
    background-color: #ff6b6b;
    color: white;
    border: none;
    border-radius: 3px;
    cursor: pointer;
}

js

function mostrarDescricao(id) {
    const descricao = document.getElementById(id);
    descricao.style.display = 'block'; // Exibe a descrição
}

function fecharDescricao(id, event) {
    event.stopPropagation(); // Evita que o clique no botão feche e reabra a descrição
    const descricao = document.getElementById(id);
    descricao.style.display = 'none'; // Oculta a descrição
}




